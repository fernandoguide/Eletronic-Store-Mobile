<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191920"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1919dp"
        android:layout_height="448dp"
        android:gravity="center_horizontal"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#eee"
        android:textSize="30sp"
        android:id="@+id/lbLogin"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu usuário"
        android:id="@+id/email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbLogin"
        android:background="@drawable/edit_round"
        android:textColorHint="#eee"
        android:textColor="#eee"
        android:layout_marginTop="25dp"
        android:layout_margin="25dp"
        android:padding="15dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite sua senha"
        android:id="@+id/senha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:background="@drawable/edit_round"
        android:textColorHint="#eee"
        android:textColor="#eee"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        android:layout_margin="25dp"
        android:padding="15dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não tem conta?  "
        android:textColor="#eee"
        android:textSize="20sp"
        android:id="@+id/lbPossuiConta"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senha"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registre-se"
        android:textColor="#7159c1"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/senha"
        app:layout_constraintLeft_toRightOf="@+id/lbPossuiConta"
        android:onClick="irCadastro"
        android:id="@+id/registrar"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrar"
        android:background="@drawable/button_rounded"
        android:textColorHint="#eee"
        android:layout_marginTop="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="15dp"
        android:text="Entrar"
        android:textColor="#ffff"
        />


</androidx.constraintlayout.widget.ConstraintLayout>