<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191920"
    tools:context=".TelaCadastro2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1919dp"
        android:layout_height="448dp"
        android:gravity="center_horizontal"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro"
        android:textColor="#eee"
        android:textSize="30sp"
        android:id="@+id/lbcadastro"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sua senha secreta"
        android:id="@+id/senha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbcadastro"
        android:background="@drawable/edit_round"
        android:textColorHint="#eee"
        android:textColor="#eee"
        android:inputType="textPassword"
        android:layout_marginTop="25dp"
        android:layout_margin="25dp"
        android:padding="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirme sua senha secreta"
        android:id="@+id/confirmarSenha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senha"
        android:background="@drawable/edit_round"
        android:textColorHint="#eee"
        android:textColor="#eee"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        android:layout_margin="25dp"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/btn_proximo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmarSenha"
        android:background="@drawable/button_rounded"
        android:textColorHint="#eee"
        android:layout_marginTop="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="15dp"
        android:text="Proximo"
        android:textColor="#ffff"
        android:onClick="irCadastro3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textColor="#eee"
        android:textSize="20sp"
        android:id="@+id/lbVoltar"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_proximo"
        android:onClick="voltarCadastro"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JÃ¡ possui uma conta?  "
        android:textColor="#eee"
        android:textSize="20sp"
        android:id="@+id/lbPossuiConta"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbVoltar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#7159c1"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/lbVoltar"
        app:layout_constraintLeft_toRightOf="@+id/lbPossuiConta"
        android:onClick="irLogin"
        />

</androidx.constraintlayout.widget.ConstraintLayout>