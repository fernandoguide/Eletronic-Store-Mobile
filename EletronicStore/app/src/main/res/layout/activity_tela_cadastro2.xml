<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191920"
    tools:context=".TelaCadastro2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1919dp"
        android:layout_height="448dp"
        android:gravity="center_horizontal"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="Cadastro"
                android:textColor="#eee"
                android:textSize="30sp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/et_senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/edit_round"
                android:hint="Sua senha secreta"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#eee"
                android:textColorHint="#eee"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/et_senha2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/edit_round"
                android:hint="Confirme sua senha secreta"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#eee"
                android:textColorHint="#eee"
                android:layout_gravity="center" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_rounded"
                android:onClick="irCadastro3"
                android:padding="15dp"
                android:text="Proximo"
                android:textColor="#ffff"
                android:textColorHint="#eee"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="voltarCadastro"
                android:text="Voltar"
                android:textColor="#eee"
                android:textSize="20sp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="70dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85dp"
                    android:text="JÃ¡ possui uma conta?  "
                    android:textColor="#eee"
                    android:textSize="20sp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="irLogin"
                    android:text="Login"
                    android:textColor="#7159c1"
                    android:textSize="20sp"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>