<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191920"
    tools:context=".TelaCadastro1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1919dp"
        android:layout_height="448dp"
        android:gravity="center_horizontal"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Cadastro"
                android:textColor="#eee"
                android:textSize="30sp"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/edit_round"
                android:hint="Digite seu Email"
                android:padding="15dp"
                android:textColor="#eee"
                android:textColorHint="#eee"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/et_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/edit_round"
                android:hint="Digite seu Nome"
                android:padding="15dp"
                android:textColor="#eee"
                android:textColorHint="#eee"
                android:layout_gravity="center"
                 />

            <EditText
                android:id="@+id/et_cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/edit_round"
                android:hint="Informe seu CPF"
                android:padding="15dp"
                android:textColor="#eee"
                android:textColorHint="#eee"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/et_telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/edit_round"
                android:hint="Número de Telefone"
                android:padding="15dp"
                android:textColor="#eee"
                android:textColorHint="#eee"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_rounded"
                android:onClick="irCadastro2"
                android:padding="15dp"
                android:text="Proximo"
                android:textColor="#ffff"
                android:textColorHint="#eee"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="20dp"
                    android:text="Já possui uma conta?  "
                    android:textColor="#eee"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:onClick="irLogin"
                    android:text="Login"
                    android:textColor="#7159c1"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>